{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false,
    "bracketSpacing": true,
    "overrides": [
        {
            "files": "*.prisma",
            "options": {
                "parser": "prisma",
                "singleQuote": true,
                "trailingComma": "all"
            }
        },
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2,
                "parser": "json",
                "trailingComma": "none"
            }
        }
    ]
}
